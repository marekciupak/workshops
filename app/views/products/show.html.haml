%h2
  = product.title
  %span.label.label-default
    = product.category.name
%p
  %b Description:
  = product.description
%p
  %b Price:
  = product.price

%br

%h3 Reviews
%ul.list-group
  = render reviews

- if user_signed_in?
  %h3 Add new review
  = render 'reviews/form'

%br
%br

- if user_signed_in?
  = link_to 'Edit', edit_category_product_path(category.id, product.id), class: "btn btn-primary"
  \|
= link_to 'Back', category_products_path, class: 'btn btn-primary'

%br
%br
